@model YourProjectNamespace.Models.Message
@{
    ViewData["Title"] = "Contato";
}
<h2 style="color: blanchedalmond;">Me envie uma mensagem</h2>
<form asp-action="Index" method="post">
    <div>
        <label for="Name" style="color: blanchedalmond;">Nome:</label>
        <input type="text" id="Name" name="Name" />
    </div>
    <div>
        <label for="Email" style="color: blanchedalmond;">Email:</label>
        <input type="email" id="Email" name="Email" />
    </div>
    <div>
        <label for="Content" style="color: blanchedalmond;">Mensagem:</label>
        <input type="text" id="Content" name="Content" />
    </div>
    <button type="submit">Enviar</button>
</form>
@if (ViewBag.Message != null)
{
    <h3>Received Information:</h3>
    <p><strong>Name:</strong> @ViewBag.Name</p>
    <p><strong>Email:</strong> @ViewBag.Email</p>
    <p><strong>Message:</strong> @ViewBag.Message</p>
        <p><strong>Message:</strong> @ViewBag.Message</p>
    <p><strong>Message:</strong> @ViewBag.Message</p>

}